{
  "compilerOptions": {
    "lib": ["esnext", "DOM"],
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types",
    "maxNodeModuleJsDepth": 0,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.js", "test/**/*.js"],
  "exclude": ["node_modules", "test/infra/template.js"]
}
